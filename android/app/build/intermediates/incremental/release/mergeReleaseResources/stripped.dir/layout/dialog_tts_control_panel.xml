<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_selected"
    android:padding="16dp">

    <!-- 状态行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="10sp"
                android:textColor="#9CA3AF" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开始"
                android:textSize="13sp"
                android:textColor="@color/stone_700"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvChapterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1章"
            android:textSize="12sp"
            android:textColor="@color/stone_500" />
    </LinearLayout>

    <!-- 控制按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 上一句 -->
        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_skip_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="上一句"
            app:tint="@color/stone_600" />

        <!-- 停止 -->
        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_stop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="停止"
            app:tint="@color/stone_600" />

        <!-- 播放/暂停 -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/bg_circle_teal"
            android:contentDescription="播放"
            android:padding="14dp"
            app:tint="@color/white" />

        <!-- 下一句 -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_skip_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="下一句"
            app:tint="@color/stone_600" />

        <!-- 语速 -->
        <ImageButton
            android:id="@+id/btnSpeed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_speed"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="语速"
            app:tint="@color/stone_600" />

        <!-- 桌面歌词 -->
        <ImageButton
            android:id="@+id/btnFloatingLyrics"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_tts"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="桌面歌词"
            app:tint="@color/stone_600" />
    </LinearLayout>

    <!-- 进度条 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="11sp"
            android:textColor="@color/stone_500" />

        <SeekBar
            android:id="@+id/seekBarProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/teal_600"
            android:thumbTint="@color/teal_600" />
    </LinearLayout>

    <!-- 语速设置 -->
    <LinearLayout
        android:id="@+id/layoutSpeedControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语速"
                android:textSize="11sp"
                android:textColor="@color/stone_500" />

            <TextView
                android:id="@+id/tvSpeedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:textSize="12sp"
                android:textColor="@color/teal_600"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:max="15"
            android:progress="5"
            android:progressTint="@color/teal_600"
            android:thumbTint="@color/teal_600" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.5x"
                android:textSize="10sp"
                android:textColor="@color/stone_400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0x"
                android:textSize="10sp"
                android:textColor="@color/stone_400" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
