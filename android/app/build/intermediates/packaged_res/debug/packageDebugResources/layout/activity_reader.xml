<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/storytrim_bg">

    <!-- Content Area -->
    <ImageView
        android:id="@+id/ivReaderBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <View
        android:id="@+id/viewBackgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20FFFFFF"
        android:visibility="gone" />

    <com.storytrim.app.ui.reader.core.ReaderView
        android:id="@+id/readerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/storytrim_bg" />

    <!-- Top Toolbar (Hidden by default) -->
    <FrameLayout
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/storytrim_surface"
        android:elevation="@dimen/elevation_sm"
        android:paddingTop="@dimen/space_lg"
        android:paddingBottom="@dimen/space_sm"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_lg">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:padding="@dimen/space_xs"
                app:tint="@color/storytrim_text_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvBookTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="书籍名称"
                android:textAppearance="@style/TextAppearance.StoryTrim.Body"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnTtsTop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/space_md" />

            <ImageView
                android:id="@+id/btnTtsTop"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_tts"
                android:padding="@dimen/space_xs"
                app:tint="@color/storytrim_text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMagic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_xl"
        android:src="@drawable/ic_auto_fix"
        android:visibility="gone"
        app:tint="@color/storytrim_text_primary"
        app:backgroundTint="@color/storytrim_surface_muted"
        app:elevation="@dimen/elevation_md"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenu"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Menu (Hidden by default) -->
    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/storytrim_surface"
        android:elevation="@dimen/elevation_sm"
        android:paddingVertical="@dimen/space_md"
        android:paddingHorizontal="@dimen/space_sm"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/btnCatalog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_menu_book"
                app:tint="@color/storytrim_text_secondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="目录"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnPrevChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_prev_chapter"
                app:tint="@color/storytrim_text_secondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上一章"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBatchTrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_batch"
                app:tint="@color/storytrim_text_secondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指定精简"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnNextChapter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_next_chapter"
                app:tint="@color/storytrim_text_secondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下一章"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/storytrim_text_secondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
