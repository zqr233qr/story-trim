<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/storytrim_bg"
    android:paddingBottom="@dimen/space_lg">

    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:background="@drawable/scrollbar_thumb"
        android:backgroundTint="@color/storytrim_border"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_md"
        android:layout_marginBottom="@dimen/space_lg" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阅读设置"
                android:textAppearance="@style/TextAppearance.StoryTrim.Subtitle"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_primary"
                android:paddingHorizontal="@dimen/space_xl"
                android:paddingBottom="@dimen/space_md" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="字号"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_secondary"
                android:paddingHorizontal="@dimen/space_xl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:layout_marginTop="@dimen/space_sm"
                android:layout_marginBottom="@dimen/space_md"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="13sp"
                    android:textColor="@color/storytrim_text_secondary" />

                <SeekBar
                    android:id="@+id/seekFontSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/space_md"
                    android:max="12"
                    android:progress="4"
                    android:progressTint="@color/storytrim_accent"
                    android:thumbTint="@color/storytrim_accent" />

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="18sp"
                    android:textColor="@color/storytrim_text_primary" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="翻页模式"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_secondary"
                android:paddingHorizontal="@dimen/space_xl" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/togglePageMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:layout_marginTop="@dimen/space_sm"
                android:layout_marginBottom="@dimen/space_md"
                app:singleSelection="true"
                app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPageScroll"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="滚动"
            android:textColor="@color/segmented_button_text"
            app:backgroundTint="@color/segmented_button_bg"
            app:strokeColor="@color/segmented_button_stroke"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_md"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="@dimen/space_xs" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPageClick"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="点击"
            android:textColor="@color/segmented_button_text"
            app:backgroundTint="@color/segmented_button_bg"
            app:strokeColor="@color/segmented_button_stroke"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_md"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="@dimen/space_xs" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="阅读模式"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_secondary"
                android:paddingHorizontal="@dimen/space_xl" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleReadingMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:layout_marginTop="@dimen/space_sm"
                android:layout_marginBottom="@dimen/space_md"
                app:singleSelection="true"
                app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReadingLight"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="日间"
            android:textColor="@color/segmented_button_text"
            app:backgroundTint="@color/segmented_button_bg"
            app:strokeColor="@color/segmented_button_stroke"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_md"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="@dimen/space_xs" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReadingDark"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="夜间"
            android:textColor="@color/segmented_button_text"
            app:backgroundTint="@color/segmented_button_bg"
            app:strokeColor="@color/segmented_button_stroke"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_md"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="@dimen/space_xs" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReadingSepia"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="护眼"
            android:textColor="@color/segmented_button_text"
            app:backgroundTint="@color/segmented_button_bg"
            app:strokeColor="@color/segmented_button_stroke"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_md"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingVertical="@dimen/space_xs" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/space_sm">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI 精简模式偏好"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全局设置"
            android:textSize="11sp"
            android:textColor="@color/storytrim_text_muted" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerPreferredModes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_lg"
                android:layout_marginBottom="@dimen/space_sm" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="说明：选择偏好的阅读模式，全局生效。点击魔法棒可切换回原文。"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:paddingHorizontal="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_md" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/space_sm">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="阅读背景图"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地相册"
            android:textSize="11sp"
            android:textColor="@color/storytrim_text_muted" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_sm"
                android:gravity="center_vertical"
                android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBgStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未设置"
            android:textSize="12sp"
            android:textColor="@color/storytrim_text_secondary" />

        <TextView
            android:id="@+id/btnSelectBg"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="选择"
            android:paddingHorizontal="@dimen/space_md"
            android:gravity="center"
            android:background="@drawable/bg_chip_outline"
            android:textColor="@color/storytrim_text_secondary" />

        <TextView
            android:id="@+id/btnClearBg"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/space_sm"
            android:text="清除"
            android:paddingHorizontal="@dimen/space_md"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_chip_outline"
            android:textColor="@color/storytrim_text_secondary" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="说明：支持本地相册图片，自动铺满显示。"
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:paddingHorizontal="@dimen/space_xl"
                android:layout_marginBottom="@dimen/space_md" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
