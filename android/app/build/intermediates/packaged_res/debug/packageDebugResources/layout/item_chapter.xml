<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvChapterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/space_lg"
        android:paddingHorizontal="@dimen/space_xl"
        android:text="Chapter Title"
        android:textSize="15sp"
        android:textColor="@color/storytrim_text_primary"
        android:maxLines="1"
        android:ellipsize="end" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/storytrim_divider"
        android:layout_marginHorizontal="@dimen/space_xl" />

</LinearLayout>
