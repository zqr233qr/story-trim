<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="@dimen/space_xs"
    android:layout_marginVertical="3dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/radius_sm"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/storytrim_border"
        app:cardBackgroundColor="@color/storytrim_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/space_sm">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/selectCircle"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/storytrim_border"
                app:cardBackgroundColor="@android:color/transparent">

                <View
                    android:id="@+id/selectDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@drawable/bg_circle_stone_200"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvChapterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_sm"
                android:text="1. Chapter Title"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/storytrim_text_muted"
                android:layout_marginStart="@dimen/space_sm"
                android:visibility="gone" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前"
        android:textSize="9sp"
        android:textColor="@color/storytrim_accent_dark"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/bg_capsule_blue_light"
        android:layout_gravity="top|end"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:visibility="gone" />

</FrameLayout>
