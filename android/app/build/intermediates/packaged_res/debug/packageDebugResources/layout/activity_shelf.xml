<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stone_50"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="60dp"
        android:paddingBottom="32dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/avatarContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_stone_200">
                
                <TextView
                    android:id="@+id/tvAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:textStyle="bold"
                    android:textColor="@color/stone_600"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- Upload Box -->
        <LinearLayout
            android:id="@+id/cardUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_card_upload"
            android:padding="40dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_upload"
                app:tint="@color/stone_400"
                android:background="@drawable/bg_circle_stone_50"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入本地书籍"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/stone_800"
                android:letterSpacing="-0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持 TXT 格式"
                android:textSize="11sp"
                android:textColor="@color/stone_400"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Book List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="16dp">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewBookCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 本"
                android:textSize="11sp"
                android:textColor="@color/stone_400"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Book List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_book_card" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="书架空空如也"
            android:textSize="13sp"
            android:textColor="@color/stone_300"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>