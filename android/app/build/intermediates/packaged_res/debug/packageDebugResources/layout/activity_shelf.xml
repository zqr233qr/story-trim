<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/storytrim_bg"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingTop="@dimen/space_3xl"
        android:paddingBottom="@dimen/space_2xl">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/space_2xl">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="StoryTrim" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_sm"
                    android:text="StoryTrim"
                    android:textAppearance="@style/TextAppearance.StoryTrim.Subtitle"
                    android:textStyle="bold"
                    android:textColor="@color/storytrim_text_primary" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/avatarContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_stone_200">
                
                <TextView
                    android:id="@+id/tvAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:textStyle="bold"
                    android:textColor="@color/storytrim_text_secondary"
                    android:layout_gravity="center" />
            </FrameLayout>
        </LinearLayout>

        <!-- Upload Box -->
        <LinearLayout
            android:id="@+id/cardUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_card_upload"
            android:padding="@dimen/space_2xl"
            android:layout_marginBottom="@dimen/space_2xl">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_upload"
                app:tint="@color/storytrim_text_muted"
                android:background="@drawable/bg_circle_stone_50"
                android:padding="@dimen/space_md"
                android:layout_marginBottom="@dimen/space_lg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入本地书籍"
                android:textAppearance="@style/TextAppearance.StoryTrim.Body"
                android:textStyle="bold"
                android:textColor="@color/storytrim_text_primary"
                android:letterSpacing="-0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支持 TXT 格式"
                android:textSize="11sp"
                android:textColor="@color/storytrim_text_muted"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginTop="@dimen/space_xs" />
        </LinearLayout>

        <!-- Book List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/space_lg">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textViewBookCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 本"
                android:textAppearance="@style/TextAppearance.StoryTrim.Caption"
                android:textColor="@color/storytrim_text_muted"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Book List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_book_card" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="书架空空如也"
            android:textSize="13sp"
            android:textColor="@color/storytrim_text_muted"
            android:textStyle="italic"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
