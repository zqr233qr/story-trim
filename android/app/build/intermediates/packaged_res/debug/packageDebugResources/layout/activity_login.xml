<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/storytrim_bg"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_2xl">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" />

        <!-- Logo Area (Minimalist) -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_menu_book"
            app:tint="@color/storytrim_text_primary"
            android:layout_marginBottom="48dp" />

        <!-- Form -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_lg"
            android:hint="用户名"
            app:boxBackgroundColor="@color/storytrim_surface"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="@color/storytrim_text_muted"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/storytrim_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xl"
            android:hint="密码"
            app:boxBackgroundColor="@color/storytrim_surface"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md"
            app:boxStrokeWidth="0dp"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/storytrim_text_muted"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/storytrim_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="登录"
            style="@style/Widget.StoryTrim.Button.Primary"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新账号"
            android:textColor="@color/storytrim_text_muted"
            android:textSize="14sp"
            android:padding="@dimen/space_sm" />

        <TextView
            android:id="@+id/tvSkipLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接使用"
            android:textColor="@color/storytrim_text_secondary"
            android:textSize="14sp"
            android:padding="@dimen/space_sm" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2" />

    </LinearLayout>
</ScrollView>
