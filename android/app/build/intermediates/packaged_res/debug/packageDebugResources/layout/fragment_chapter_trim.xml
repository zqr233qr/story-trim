<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/storytrim_bg">

    <!-- Handle Bar -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:background="@drawable/scrollbar_thumb"
        android:backgroundTint="@color/storytrim_border"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_md"
        android:layout_marginBottom="@dimen/space_md" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_lg"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSheetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="指定章节精简"
            android:textAppearance="@style/TextAppearance.StoryTrim.Subtitle"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_primary" />

        <TextView
            android:id="@+id/tvPointsBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分 0"
            android:textSize="10sp"
            android:textColor="@color/storytrim_text_secondary"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/bg_chip_outline" />
    </LinearLayout>

    <!-- Mode Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_md">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择精简模式"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_muted" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewModes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:maxHeight="120dp"
            android:clipToPadding="false"
            android:paddingBottom="4dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_mode_grid" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/storytrim_divider" />

    <!-- Chapter Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingVertical="@dimen/space_md">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择章节"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_muted" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChapters"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/space_md"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_chapter_trim" />
    </LinearLayout>

    <!-- Quick Select -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_md"
        android:gravity="start">

        <TextView
            android:id="@+id/btnQuickSelect3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后 3 章"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/bg_chip_outline"
            android:layout_marginEnd="@dimen/space_sm" />

        <TextView
            android:id="@+id/btnQuickSelect5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后 5 章"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/bg_chip_outline"
            android:layout_marginEnd="@dimen/space_sm" />

        <TextView
            android:id="@+id/btnQuickSelect10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后 10 章"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/bg_chip_outline"
            android:layout_marginEnd="@dimen/space_sm" />

        <TextView
            android:id="@+id/btnQuickSelect20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后 20 章"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_secondary"
            android:paddingHorizontal="@dimen/space_sm"
            android:paddingVertical="@dimen/space_xs"
            android:background="@drawable/bg_chip_outline" />
    </LinearLayout>

    <!-- Footer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/storytrim_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingVertical="@dimen/space_lg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSelectedInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已选 0 章 · 预计消耗 0 积分"
            android:textAppearance="@style/TextAppearance.StoryTrim.Caption"
            android:textColor="@color/storytrim_text_muted" />

        <TextView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始精简"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_muted"
            android:paddingHorizontal="@dimen/space_xl"
            android:paddingVertical="@dimen/space_sm"
            android:background="@drawable/bg_primary_button"
            android:enabled="false" />
    </LinearLayout>

</LinearLayout>
