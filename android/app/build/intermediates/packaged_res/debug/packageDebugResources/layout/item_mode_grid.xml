<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginHorizontal="@dimen/space_xs"
    android:layout_marginVertical="@dimen/space_xs"
    app:cardCornerRadius="@dimen/radius_sm"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/storytrim_border"
    app:cardBackgroundColor="@color/storytrim_surface_muted"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvModeName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="精简模式"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/storytrim_text_secondary"
        android:paddingHorizontal="@dimen/space_sm"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

</com.google.android.material.card.MaterialCardView>
