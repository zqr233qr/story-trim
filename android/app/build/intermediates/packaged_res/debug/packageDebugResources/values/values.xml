    <color name="stone_50">#FAFAF9</color>
    <color name="stone_500">#78716C</color>
    <color name="stone_600">#57534E</color>
    <color name="stone_700">#44403C</color>
    <color name="stone_800">#1C1917</color>
    <color name="stone_900">#0C0A09</color>
    <color name="storytrim_accent">#14B8A6</color>
    <color name="storytrim_accent_dark">#0D9488</color>
    <color name="storytrim_bg">#FAFAF9</color>
    <color name="storytrim_border">#E7E5E4</color>
    <color name="storytrim_divider">#E7E5E4</color>
    <color name="storytrim_ripple">#1F14B8A6</color>
    <color name="storytrim_surface">#FFFFFF</color>
    <color name="storytrim_surface_muted">#F5F5F4</color>
    <color name="storytrim_text_muted">#A8A29E</color>
    <color name="storytrim_text_primary">#1C1917</color>
    <color name="storytrim_text_secondary">#57534E</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_500">#14b8a6</color>
    <color name="teal_600">#0d9488</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <dimen name="elevation_md">6dp</dimen>
    <dimen name="elevation_sm">2dp</dimen>
    <dimen name="radius_lg">18dp</dimen>
    <dimen name="radius_md">14dp</dimen>
    <dimen name="radius_sm">10dp</dimen>
    <dimen name="radius_xl">24dp</dimen>
    <dimen name="radius_xs">6dp</dimen>
    <dimen name="space_2xl">32dp</dimen>
    <dimen name="space_3xl">48dp</dimen>
    <dimen name="space_lg">16dp</dimen>
    <dimen name="space_md">12dp</dimen>
    <dimen name="space_sm">8dp</dimen>
    <dimen name="space_xl">24dp</dimen>
    <dimen name="space_xs">4dp</dimen>
    <dimen name="text_body">15sp</dimen>
    <dimen name="text_body_small">14sp</dimen>
    <dimen name="text_caption">12sp</dimen>
    <dimen name="text_subtitle">18sp</dimen>
    <dimen name="text_title">20sp</dimen>
    <string name="app_name">StoryTrim</string>
    <string name="floating_lyrics_channel_desc">悬浮歌词服务</string>
    <string name="floating_lyrics_channel_name">悬浮歌词</string>
    <string name="floating_lyrics_title">桌面歌词</string>
    <string name="tts_notification_action_next">下一章</string>
    <string name="tts_notification_action_pause">暂停</string>
    <string name="tts_notification_action_play">播放</string>
    <string name="tts_notification_action_prev">上一章</string>
    <string name="tts_notification_action_stop">停止</string>
    <string name="tts_notification_channel_desc">用于后台听书播放控制</string>
    <string name="tts_notification_channel_name">听书服务</string>
    <string name="tts_notification_content">正在播放：%s</string>
    <string name="tts_notification_title">正在听书</string>
    <style name="ShapeAppearance.StoryTrim.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_lg</item>
    </style>
    <style name="ShapeAppearance.StoryTrim.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_md</item>
    </style>
    <style name="ShapeAppearance.StoryTrim.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_sm</item>
    </style>
    <style name="TextAppearance.StoryTrim.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/storytrim_text_primary</item>
    </style>
    <style name="TextAppearance.StoryTrim.BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_body_small</item>
        <item name="android:textColor">@color/storytrim_text_secondary</item>
    </style>
    <style name="TextAppearance.StoryTrim.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_caption</item>
        <item name="android:textColor">@color/storytrim_text_muted</item>
    </style>
    <style name="TextAppearance.StoryTrim.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/storytrim_text_secondary</item>
    </style>
    <style name="TextAppearance.StoryTrim.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/storytrim_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.StoryTrim" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/storytrim_text_primary</item>
        <item name="colorPrimaryVariant">@color/stone_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/storytrim_accent</item>
        <item name="colorSecondaryVariant">@color/storytrim_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        
        <item name="android:colorBackground">@color/storytrim_bg</item>
        <item name="colorOnBackground">@color/storytrim_text_primary</item>
        <item name="colorSurface">@color/storytrim_surface</item>
        <item name="colorOnSurface">@color/storytrim_text_primary</item>

        
        <item name="textAppearanceHeadline6">@style/TextAppearance.StoryTrim.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.StoryTrim.Subtitle</item>
        <item name="textAppearanceBody1">@style/TextAppearance.StoryTrim.Body</item>
        <item name="textAppearanceBody2">@style/TextAppearance.StoryTrim.BodySecondary</item>
        <item name="textAppearanceCaption">@style/TextAppearance.StoryTrim.Caption</item>

        
        <item name="materialButtonStyle">@style/Widget.StoryTrim.Button.Primary</item>
        <item name="materialCardViewStyle">@style/Widget.StoryTrim.Card</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StoryTrim.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StoryTrim.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StoryTrim.Large</item>
        
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/storytrim_bg</item>
        <item name="android:navigationBarColor">@color/storytrim_bg</item>
        <item name="android:textColorPrimary">@color/storytrim_text_primary</item>
        <item name="android:textColorSecondary">@color/storytrim_text_muted</item>
    </style>
    <style name="Theme.StoryTrim.NoActionBar" parent="Theme.StoryTrim">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Widget.StoryTrim.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/storytrim_border</item>
        <item name="android:textColor">@color/storytrim_text_primary</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="rippleColor">@color/storytrim_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="Widget.StoryTrim.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/storytrim_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="rippleColor">@color/storytrim_ripple</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="Widget.StoryTrim.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardBackgroundColor">@color/storytrim_surface</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
    </style>
</resources>