<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/space_xl"
        android:orientation="vertical"
        android:padding="@dimen/space_xl"
        android:background="@drawable/bg_dialog_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需要登录"
            android:textAppearance="@style/TextAppearance.StoryTrim.Subtitle"
            android:textStyle="bold"
            android:textColor="@color/storytrim_text_primary" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_sm"
            android:text="精简功能需登录后使用"
            android:textAppearance="@style/TextAppearance.StoryTrim.BodySecondary"
            android:textColor="@color/storytrim_text_secondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="稍后"
                android:textAppearance="@style/TextAppearance.StoryTrim.Body"
                android:textColor="@color/storytrim_text_secondary" />

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/space_md"
                android:gravity="center"
                android:text="去登录"
                android:textAppearance="@style/TextAppearance.StoryTrim.Body"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_primary_button" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
