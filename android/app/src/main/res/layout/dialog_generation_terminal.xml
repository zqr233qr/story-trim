<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTerminalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Processing..."
        android:textColor="#00FF00" 
        android:textSize="14sp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewTerminal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_terminal_window"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTerminalTitle"
        app:layout_constraintBottom_toTopOf="@id/btnCancel">

        <TextView
            android:id="@+id/tvStreamContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E5E5E5"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="monospace" />
    </ScrollView>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#FFFFFF"
        android:backgroundTint="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
