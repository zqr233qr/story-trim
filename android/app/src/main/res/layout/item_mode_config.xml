<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/space_xl"
    android:paddingVertical="@dimen/space_md"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvModeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原文模式"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/storytrim_text_primary" />

    <TextView
        android:id="@+id/tvModeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="阅读书籍原始内容"
        android:textSize="12sp"
        android:textColor="@color/storytrim_text_muted"
        android:layout_marginTop="@dimen/space_xs" />

</LinearLayout>
