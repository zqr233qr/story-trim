<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/storytrim_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_2xl">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textAppearance="@style/TextAppearance.StoryTrim.Title"
            android:layout_marginBottom="@dimen/space_sm" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入 StoryTrim，开启智能阅读之旅"
            android:textAppearance="@style/TextAppearance.StoryTrim.BodySecondary"
            android:layout_marginBottom="48dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_lg"
            android:hint="用户名"
            app:boxBackgroundColor="@color/storytrim_surface"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md"
            app:boxStrokeWidth="0dp"
            app:hintTextColor="@color/storytrim_text_muted"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/storytrim_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_lg"
            android:hint="密码"
            app:boxBackgroundColor="@color/storytrim_surface"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md"
            app:boxStrokeWidth="0dp"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/storytrim_text_muted"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/storytrim_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_xl"
            android:hint="确认密码"
            app:boxBackgroundColor="@color/storytrim_surface"
            app:boxCornerRadiusTopStart="@dimen/radius_md"
            app:boxCornerRadiusTopEnd="@dimen/radius_md"
            app:boxCornerRadiusBottomStart="@dimen/radius_md"
            app:boxCornerRadiusBottomEnd="@dimen/radius_md"
            app:boxStrokeWidth="0dp"
            app:passwordToggleEnabled="true"
            app:hintTextColor="@color/storytrim_text_muted"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/storytrim_text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="注册"
            style="@style/Widget.StoryTrim.Button.Primary"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？去登录"
            android:textColor="@color/storytrim_text_muted"
            android:textSize="14sp"
            android:padding="@dimen/space_sm" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />

    </LinearLayout>
</ScrollView>
