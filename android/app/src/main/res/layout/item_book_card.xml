<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_lg"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_sm"
    app:strokeWidth="1dp"
    app:strokeColor="@color/storytrim_border"
    app:cardBackgroundColor="@color/storytrim_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_xl">

        <!-- Cover Placeholder -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="110dp"
            app:cardCornerRadius="@dimen/radius_sm"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/storytrim_surface_muted"
            android:layout_marginEnd="@dimen/space_lg">
            
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu_book"
                app:tint="@color/storytrim_border"
                android:layout_gravity="center" />
                
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书籍标题"
                    android:textAppearance="@style/TextAppearance.StoryTrim.Subtitle"
                    android:textStyle="bold"
                    android:textColor="@color/storytrim_text_primary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/textViewChapterCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 章节"
                    android:textAppearance="@style/TextAppearance.StoryTrim.BodySecondary"
                    android:textColor="@color/storytrim_text_muted"
                    android:layout_marginTop="@dimen/space_xs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_md">

                <!-- Tags Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTagLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本地"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/storytrim_accent_dark"
                        android:background="@drawable/bg_badge_green"
                        android:paddingHorizontal="@dimen/space_sm"
                        android:paddingVertical="3dp"
                        android:layout_marginEnd="@dimen/space_xs"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvTagCloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云端"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/storytrim_text_secondary"
                        android:background="@drawable/bg_badge_blue"
                        android:paddingHorizontal="@dimen/space_sm"
                        android:paddingVertical="3dp"
                        android:visibility="gone" />
                </LinearLayout>
                    
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_menu_more"
                    app:tint="@color/storytrim_text_muted" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
